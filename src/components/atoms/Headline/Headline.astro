---
import { HeadlineType } from '@atoms/Headline/HeadlineType.jsx';

const { className, type, headlineText } = Astro.props;
---

<HeadlineType className={`headline ${className}`} {type}>
  <slot />
</HeadlineType>

<style lang="scss">
  @use '../../../styles/main.scss' as *;

  .headline {
    color: $grey700;
    font-weight: 500;
    line-height: 1.3;
    font-family: $roboto;
    letter-spacing: 1px;
  }

  .big {
    margin-bottom: 1.5rem;
    font-size: 4.15rem;
  }

  .medium {
    margin-bottom: 1.4rem;
    font-size: 3rem;
  }

  .small {
    margin-bottom: 0.5rem;
    font-size: 1.35rem;
    line-height: 1.6;
  }
</style>
