---
const { className } = Astro.props;
---

<div class={className ? className : ''}>
  <slot />
</div>

<style lang="scss">
  @use '../../styles/main.scss' as *;

  div {
    display: flex;

    &.column {
      flex-direction: column;
    }

    &.mobile-column {
      flex-direction: column;

      @include respond(tab-land) {
        flex-direction: row;
      }
    }

    &.reverse {
      order: 1;
    }

    &.justify-center {
      align-self: center;
      justify-content: center;
    }

    &.justify-space-between {
      justify-content: space-between;
    }

    &.gap2-5 {
      gap: 2.5rem;
    }

    &.gap5 {
      gap: 5rem;
    }

    &.mw37 {
      max-width: 37rem;
    }

    &.mw45 {
      max-width: 45rem;
      margin: 0 auto;

      @include respond(tab-land) {
        margin: 0;
      }
    }

    &.mw50 {
      max-width: 50rem;
    }

    &.mt5-5 {
      margin-top: 5.5rem;
    }

    &.mt21 {
      margin-top: 21rem;
    }
  }
</style>
